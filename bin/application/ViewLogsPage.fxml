<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ViewLogsController">
  <children>
    <AnchorPane maxHeight="400.0" maxWidth="600.0" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
      <children>
            <VBox prefHeight="400.0" prefWidth="96.0" style="-fx-background-color: gray;">
               <children>
                  <Label fx:id="welcomeLabel" alignment="TOP_LEFT" contentDisplay="CENTER" prefHeight="17.0" prefWidth="64.0" text="Welcome," />
                  <Label fx:id="userLabel" text="User" />
                  <Button fx:id="effortConsoleButton" mnemonicParsing="false" onAction="#toEffortConsole" prefHeight="25.0" prefWidth="114.0" text="EffortConsole" />
                  <Button fx:id="defectConsoleButton" mnemonicParsing="false" onAction="#toDefectConsole" prefHeight="25.0" prefWidth="106.0" text="DefectConsole" />
                  <Button fx:id="planningPokerButton" mnemonicParsing="false" prefHeight="25.0" prefWidth="106.0" text="PlanningPoker" />
                  <Button fx:id="viewLogsButton" mnemonicParsing="false" onAction="#toViewLogs" prefHeight="25.0" prefWidth="113.0" text="ViewLogs" />
               </children>
            </VBox>
            <Label layoutX="268.0" layoutY="14.0" text="View Logs">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="viewLogsField" layoutX="116.0" layoutY="58.0" prefHeight="295.0" prefWidth="448.0" />
            <Button fx:id="showLogsButton" layoutX="482.0" layoutY="361.0" mnemonicParsing="false" onAction="#showLogs" text="Show Logs" />
            <Button fx:id="showDefectsButton" layoutX="135.0" layoutY="361.0" mnemonicParsing="false" onAction="#showDefects" text="Show Defects" />
      </children>
    </AnchorPane>
  </children>
</VBox>
